Glang  = require "./glang.js"
fs = require "fs"
def  test_programs()(
	programs = fs.readFileSync "./test_programs.txt" .toString.split /\s*\*\*\*\s*/ .filter(x => x != "")

	for(const program of programs){
		let g = new Glang(program)
		g.run()
		console.log(g.stack.pretty())
		console.log(g.stack.top())
		console.log("")

	)
)